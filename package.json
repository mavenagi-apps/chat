    "postcss": "^8",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.3.3",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.1",
    "turbo": "^2.1.3",
    "typescript": "^5",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  }
