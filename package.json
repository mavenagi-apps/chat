    "@typescript-eslint/parser": "^8.13.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.6",
    "eslint": "^9.13.0",
    "eslint-config-next": "^15.0.2",
